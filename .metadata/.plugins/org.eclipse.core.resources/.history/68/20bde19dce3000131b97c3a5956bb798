package test.parser;

import java.io.IOException;
import java.io.Reader;

import test.IpFactory;
import test.ip.IP;

public class Parser1 extends Parser {
	public Parser1() {
	}

	public Parser1(Reader r) {
		// super();
		try {
			int b = 0;
			boolean flag = false;
			StringBuilder buffer = new StringBuilder(110);
			while ((b = r.read()) != -1) {
				if ((char) b == '\r') {
					buffer = new StringBuilder(110);
					flag = false;
				}
				if ((char) b != '\n' && !flag) {
					if ((char) b == '/' || (char) b == ' ') {
						System.out.println(buffer.toString());
						IP ip = IpFactory.getIP(new String(buffer));
						this.addToList(ip);
						flag = true;
					} else {
//						System.out.print((char) b);
						buffer.append((char) b);
					}
				}
			}
			r.close();
		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			try {
				r.close();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
	}
}
