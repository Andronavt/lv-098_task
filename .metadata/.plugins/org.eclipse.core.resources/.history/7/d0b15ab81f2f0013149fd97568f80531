/**
 * 
 */
package strings;

import static staticPack.StaticPrint.print;

import java.util.regex.Matcher;
import java.util.regex.Pattern;

/**
 * @author orecto
 * 
 */
/*
 * For the phrase "Java now has regular expressions" evaluate whether the
 * following expressions will find a match: ^Java \Breg.* n.w\s+h(a|i)s s? s* s+
 * s{4} S{1}. s{0,3}
 */
/*
 * Compile with args: "Java now has regular expressions", "^Java",
 * "\Berg.*", "n.w\s+h(a|i)s","s?", "s+", "s{4}", "s{1}.", "s{0,3}
 */
public class Exercise10 {
	public static void main(String[] args) {
		if (args.length < 2) {
			print("Usage:\njava TestRegularExpression "
					+ "characterSequence regularExpression+");
			System.exit(0);
		}
		System.out.println(args[0]);
		print("Input: \"" + args[0] + "\"");
		for (String arg : args) {
			print("Regular expression: \"" + arg + "\"");
			Pattern pattern = Pattern.compile(arg);
			Matcher m = pattern.matcher(args[0]);
			while (m.find()) {
				print("Match \"" + m.group() + "\" at positions " + m.start()
						+ "-" + (m.end() - 1));
			}
		}
	}
}
