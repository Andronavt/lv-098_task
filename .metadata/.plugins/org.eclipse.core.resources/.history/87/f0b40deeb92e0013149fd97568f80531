 */
package strings;

import java.util.Formatter;
import java.util.Set;
import java.util.TreeSet;

/**
 * @author orecto
 * 
 */
/*
 * Modify Receipt.java so that the widths are all controlled by a single set of
 * constant values. The goal is to allow you to easily change a width by
 * changing a single value in one place.
 */
public class Exercise4 {
	private double total = 0;
	private Formatter formatter = new Formatter(System.out);
	private static final int[] SET = {-15, 5, 10};
	private String str1 = "%" + SET[0] + "s %" + SET[1] + "s %" + SET[2] + "s\n";
	private String str2 = "%" + SET[0] + ".15s %" + SET[1] + "d %" + SET[2] + ".2f\n";
	private String str3 = "%" + SET[0] + "s %" + SET[1] + "s %" + SET[2] + ".2f\n";
	public void printTitle() {
		formatter.format(str1, "Item", "Qty", "Price");
		formatter.format(str1, "----", "---", "-----");
	}

	public void print(String name, int qty, double price) {
		formatter.format(str2, name, qty, price);
		total += price;
	}

	public void printTotal() {
		formatter.format(str3, "Tax", "", total * 0.06);
		formatter.format(str1, "", "", "-----");
		formatter.format(str3, "Total", "", total * 1.06);
	}

	public static void main(String[] args) {
		Exercise4 receipt = new Exercise4();
		receipt.printTitle();
		receipt.print("Jack’s Magic Beans", 4, 4.25);
		receipt.print("Princess Peas", 3, 5.1);
		receipt.print("Three Bears Porridge", 1, 14.29);
		receipt.printTotal();
	}
}
