/**
 * 
 */
package strings;

import java.math.BigInteger;
import java.util.Formatter;

/**
 * @author orecto
 * 
 */
/*
 * For each of the basic conversion types in the above table, write the most
 * complex formatting expression possible. That is, use all the possible format
 * specifiers available for that conversion type
 */
public class Exercise5 {
	public static void main(String[] args) {
		Formatter formatter = new Formatter(System.out);

		char ch = 'a';
		System.out.println("char u = \'a\'");
		formatter.format("|%-2s|%-2S|%-2c|%-2C|%-5b|%-5B|%-3h|%-3H|%%\n\n", ch,
				ch, ch, ch, ch, ch, ch, ch);

		int i = 121;
		System.out.println("int v = 121");
		formatter
				.format("|%-4s|%-4S|%-4d|%-4c|%-4C|%-5b|%-5B|%-4x|%-4X|%-4h|%-4H|%%\n\n",
						i, i, i, i, i, i, i, i, i, i, i);

		BigInteger bI = new BigInteger("50000000000000");
		System.out.println("BigInteger w = 50000000000000");
		formatter.format("|%-15s|%-15S|%-5b|%-5B|%-15x|%-15X|%-5h|%-5H|%%\n\n",
				bI, bI, bI, bI, bI, bI, bI, bI);

		double d = 179.543;
		System.out.println("double x = 179.543");
		formatter.format(
				"|%-8s|%-8S|%-5b|%-5B|%-15f|%-15e|%-15E|%-12h|%-12H|%%\n\n", d,
				d, d, d, d, d, d, d, d);

		Exercise5 obj = new Exercise5();
		System.out.println("Conversion y = new Conversion()");
		formatter.format("|%-20s|%-20S|%-5b|%-5B|%-10h|%-10H|%%\n\n", obj, obj, obj,
				obj, obj, obj);

		boolean b = false;
		System.out.println("boolean z = false");
		formatter.format("|%-7s|%-7S|%-7b|%-7B|%-7h|%-7H|%%\n\n", b, b, b, b,
				b, b);
		formatter.close();
	}

}
