package test;

import test.ip.*;

public class IpFactory {
	public static IP getIP(String str) {
		if (str == null)
			return null; // may throw Exception if needed
		else if (str.isEmpty())
			return null; // may throw Exception if needed
		else {
			if (str.contains(".") && str.contains(":"))
				return null; // may throw Exception if needed
			else {
				if (str.contains("."))
					return new IPv4(str);
				else if (str.contains(":"))
					return new IPv6(str);
				else
					return null; // may throw Exception if needed
			}
		}
	}
}
