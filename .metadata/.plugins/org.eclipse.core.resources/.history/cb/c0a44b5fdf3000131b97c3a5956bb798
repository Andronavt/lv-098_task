	public Parser1(Reader r) {
		// super();
		try {
			// Pattern pattern = Pattern.compile("^([0-9a-fA-F]+[:.]?)+");
			char ch = 0;
			boolean readed = false;
			StringBuilder buffer = new StringBuilder(50);
			while (true) {
				ch = (char) r.read();
//				System.out.print(ch);
				if (((int) ch) == -1) {
					break;
				} else if ((ch == '/' || ch == ' ') && !readed) {
					System.out.println();
					System.out.println(buffer);
					IP ip = IpFactory.getIP(buffer.toString());
					this.addToList(ip);
					readed = true;
				} else if (ch == '\n') {
					buffer = new StringBuilder(50);
					readed = false;
				} else if (ch != ' ' && readed) {
					System.out.print(ch);
					buffer.append(ch);
					readed = false;
				} else {
					//System.err.println("Problem");
				}
				try {
					Thread.sleep(10);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
			r.close();
		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			try {
				r.close();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
	}
}
